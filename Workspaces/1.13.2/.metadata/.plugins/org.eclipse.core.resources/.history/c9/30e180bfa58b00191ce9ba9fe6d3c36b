package com.eleksploded.betterbeds;

import net.minecraftforge.common.ForgeConfigSpec;

public class Config {
    private static final ForgeConfigSpec.Builder BUILDER = new ForgeConfigSpec.Builder();
    public static final General GENERAL = new General(BUILDER);

    public static class General {
        public final ForgeConfigSpec.ConfigValue<Boolean> Hardcore;
        public final ForgeConfigSpec.ConfigValue<String[]> Blacklist;

        public General(ForgeConfigSpec.Builder builder) {
        	String list[] = {"minecraft:end_portal_frame"};
            builder.push("General");
            Hardcore = builder
                    .comment("Enables/Disables hardcore mode, bedrock instead of beds")
                    .translation("config.hardcore")
                    .define("enableMod", true);
            Blacklist = builder
            		.comment("Blocks to blacklist for bedification")
            		.translation("config.blacklist")
            		.define("blacklist", list);
            builder.pop();
        }
    }
    
    public static final ForgeConfigSpec spec = BUILDER.build();
}
